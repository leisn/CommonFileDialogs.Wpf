<Window x:Class="TestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20,0">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Open Folder" Click="OpenFolder_Click" Height="80" FontSize="30"/>
            <Button Content="Open File"  Click="OpenFile_Click" Height="80" FontSize="30" Margin="0,20"/>
            <Button Content="Save File"  Click="SaveFile_Click" Height="80" FontSize="30"/>
        </StackPanel>
    </Grid>
</Window>
